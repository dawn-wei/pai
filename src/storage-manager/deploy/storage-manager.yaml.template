apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: storage-manager-ds
spec:
  selector:
    matchLabels:
      app: storage-manager
  template:
    metadata:
      name: storage-manager
      labels:
        app: storage-manager
      annotations:
        smbport: "{{ cluster_cfg["storage-manager"]["smbport"] }}"
        nfsport: "{{ cluster_cfg["storage-manager"]["nfsport"] }}"
        localpath: "{{ cluster_cfg["storage-manager"]["localpath"] }}"
    spec:
      hostNetwork: false
      containers:
      - name: storage-manager
        image: {{ cluster_cfg["cluster"]["docker-registry"]["prefix"] }}storage-manager:{{ cluster_cfg["cluster"]["docker-registry"]["tag"] }}
        imagePullPolicy: Always
        env:
        - name: DOMAIN
          value: {{ cluster_cfg['storage-manager']['domain'] }}
        - name: DOMAINUSER
          value: {{ cluster_cfg['storage-manager']['domainuser'] }}
        - name: DOMAINPWD
          value: {{ cluster_cfg['storage-manager']['domainpwd'] }}
        - name: PAISMBUSER
          value: {{ cluster_cfg['storage-manager']['smbuser'] }}
        - name: PAISMBPWD
          value: {{ cluster_cfg['storage-manager']['smbpwd'] }}
        volumeMounts:
        - name: pai-storage
          mountPath: /share/pai
        - name: host-modules
          mountPath: /lib/modules
          readOnly: true
        ports:
        - containerPort: 445
          hostPort: {{ cluster_cfg["storage-manager"]["smbport"] }}
          name: sm-smbport
        - containerPort: 2049
          hostPort: {{ cluster_cfg["storage-manager"]["nfsport"] }}
          name: sm-nfsport
      volumes:
        - name: pai-storage
          hostPath:
            path: {{ cluster_cfg["storage-manager"]["localpath"] }}
        - name: host-modules
          hostPath:
            path: /lib/modules
      imagePullSecrets:
      - name: {{ cluster_cfg["cluster"]["docker-registry"]["secret-name"] }}
      tolerations:
      - key: node.kubernetes.io/memory-pressure
        operator: "Exists"
      - key: node.kubernetes.io/disk-pressure
        operator: "Exists"
